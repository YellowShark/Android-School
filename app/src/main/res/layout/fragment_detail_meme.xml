<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="userName"
            type="String" />

        <variable
            name="userPhoto"
            type="String" />

        <variable
            name="photoUrl"
            type="String" />

        <variable
            name="memeTitle"
            type="String" />

        <variable
            name="isLiked"
            type="Boolean" />

        <variable
            name="description"
            type="String" />

        <variable
            name="date"
            type="String" />

    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/martinique">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/detail_toolbar"
                style="@style/base_toolbar_style"
                app:contentInsetStartWithNavigation="56dp"
                app:imgLogo="@{userPhoto}"
                app:menu="@menu/memes_detail_toolbar_menu"
                app:navigationIcon="@drawable/ic_close"
                app:title="@{userName}" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:textColor="@color/white"
                android:textSize="24sp"
                android:text="@{memeTitle}"
                tools:text="Meme title"/>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:loadImage="@{photoUrl}"
                tools:srcCompat="@tools:sample/avatars" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="24dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:alpha="0.8"
                    android:text="@{date}"
                    android:textColor="@color/white"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:text="365 дней назад" />

                <FrameLayout
                    android:id="@+id/like_iv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?selectableItemBackground"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:layout_gravity="center">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:adjustViewBounds="true"
                        android:src="@{isLiked ? @drawable/ic_like :  @drawable/ic_unlike}"
                        tools:srcCompat="@drawable/ic_like" />

                </FrameLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:text="@{description}"
                android:textColor="@color/white"
                tools:text="@string/dummy_text" />

        </LinearLayout>
    </ScrollView>

</layout>